<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceServidorJava" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/branco</item>
        <item name="colorOnPrimary">@color/branco</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/preto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/color_verde</item>
        <item name="colorOnPrimary">@color/branco</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/preto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditText" parent="@style/Theme.EcommerceServidorJava">
        <item name="android:textColorHint">@color/color_cinza_escuro</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_edit_off</item>
        <item name="android:padding">16dp</item>
        <item name="colorControlNormal">@color/color_verde</item>


    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Spinner" parent="@style/Theme.EcommerceServidorJava">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="Spinner2" parent="@style/Theme.EcommerceServidorJava">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Button" parent="@style/Theme.EcommerceServidorJava">

        <item name="android:textColor">@color/branco</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextView" parent="@style/Theme.EcommerceServidorJava">

        <item name="android:textColor">@color/preto</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="EditText.Green" parent="@style/Theme.AppCompat">
        <item name="colorControlActivated">@color/color_verde</item>
        <item name="colorControlHighlight">@color/color_verde</item>
        <item name="colorControlNormal">@color/color_verde</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="CustomAlertDialog2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="Search_View_Theme">
        <item name="colorAccent">#FFD7BB</item>
        <item name="colorControlNormal">#FFD7BB</item>
        <item name="android:editTextColor">@color/branco</item>
        <item name="android:textColorHint">#FFD7BB</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>