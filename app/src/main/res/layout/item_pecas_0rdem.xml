<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/prata">

        </View>

        <TextView
            android:id="@+id/text_qtd"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="00001"></TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/prata">

        </View>

        <TextView
            android:id="@+id/text_pecas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text=" bucha de bronze"></TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/prata">

        </View>

        <TextView
            android:id="@+id/text_valor"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=" R$ 20,00"></TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/prata">

        </View>

        <TextView
            android:id="@+id/text_valorTotal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=" R$ 20,00"></TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/prata">

        </View>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/preto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>